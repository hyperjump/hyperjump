{
  "productName": "Hyperjump",
  "version": "0.0.0",
  "identifier": "com.hyperjump.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hyperjump",
        "width": 1200,
        "height": 720,
        "minHeight": 480,
        "minWidth": 320,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "zoomHotkeysEnabled": true,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["hyperjump"]
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzODgzNzc5MTdGNDY5QzYKUldUR2FmUVhlVGVJZ3hwaWlKWGpGU0tqUTU3VEppalQ4Vmx6eEswRG1kYUpuaGEwZTFVT1NxVnMK",
      "endpoints": [
        "https://github.com/hyperjump/app/releases/latest/download/latest.json"
      ]
    }
  }
}
